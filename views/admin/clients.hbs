

<section class=" minh mg-top2 flex" >

<div class="container">
   <div class="flex mb50">
            <h1 class="title has-text-primary-dark">Wonderful Clientes</h1>
          </div>
  <div class="card">


<table class="table is-fullwidth  is-bordered is-mobile">
<thead>
  <tr>
  <th>USERNAME</th>
  <th>EMAIL</th>
  <th>PHONE</th>
  <th>USER PROFILE</th>
  <th>REMINDER</th>
  </tr>
</thead> 
<tbody>
{{#each user}}
{{#hideAdmin this.role}}
  <tr> 
    <td>{{this.username}}</td>
    <td>{{this.email}}</td>
    <td>{{this.telephone}}</td>
    <td align="center"><a href="/admin/profile/{{this._id}}" ><i class="fas fa-user "></i></a></td>
    <td align="center"><a href="/admin/orders/{{this._id}}"><i class="fas fa-clock"></i></a></td>
  </tr>
  {{/hideAdmin}}
{{/each}}
</tbody>
</table>
</div>
</div>
</section>