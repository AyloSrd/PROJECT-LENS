<section class="section">
	<div class="columns">
		<div class="column">
			<img src="{{user.info.id_ContactLens.img}}" alt="acuvue box">
		</div>
		<div class="column">
			<button id="show" class="button is-warning is-pulled-right">
					<span class="icon">
						<i class="far fa-edit"></i>
					</span>
			</button>
			<form class="form-horizontal" >
				<fieldset>


				<!-- Select Basic -->
				<div class="field">
				<label class="label" for="lens">Select lens</label>
				<div class="control">
					<div class="select">
						<select id="lens" name="lens" class="selection">
							{{#each lenses}}
								{{#areTheSame this.id ../user.info.id_ContactLens.img}}
							<option value="{{this._id}}" selected>{{this.brand}}</option>
								{{else}}
							<option value="{{this._id}}">{{this.brand}}</option>
								{{/areTheSame}}
							{{/each}}
							{{!-- <option value="{{user.info.id_ContactLens._id}}" selected>{{user.info.id_ContactLens.brand}}</option> --}}
						</select>
					</div>
				</div>
				</div>

				<!-- Select Basic -->
				<div class="field">
				<label class="label" for="frequency">What frequency?</label>
				<div class="control">
					<div class="select">
						<select id="frequency" name="frequency" class="">
						<option>Daily</option>
						<option>Weekly</option>
						<option>Monthly</option>
						</select>
					</div>
				</div>
				</div>

				<!-- Text input-->
				<div class="field">
				<label class="label" for="remainder">Change reminder</label>
				<div class="control">
					<input id="reminder" name="remainder" type="date" class="input " readonly="true">
				</div>
				</div>


				<!-- Multiple Radios -->
				<div class="field">
				<label class="label" for="delivery">Home delivery?</label>
				<div class="control">
					<label class="radio" for="delivery-0">
					<input type="radio" name="delivery" id="delivery-0" value="true" checked="checked">
					Yes, please
					</label>
					<label class="radio" for="delivery-1">
					<input type="radio" name="delivery" id="delivery-1" value="false">
					No thanks, I'll come pick it up!
					</label>
				</div>
				</div>

				<!-- Text input-->
				<div class="field">
				<label class="label" for="address">Delivery address</label>
				<div class="control">
					<input id="address" name="address" type="text" placeholder="10 Madison av NY" class="input " readonly="true" value="{{user.address}}">
					
				</div>
				</div>

				<!-- Button (Double) -->
				<div id="double" class="field">
				<label class="label" for="edit"></label>
				<div class="control">
					<button id="edit" name="edit" class="button is-primary">Save</button>
					<button id="discard" name="discard" class="button is-warning">Discard changes</button>
				</div>
				</div>

				</fieldset>
			</form>
		</div>
	</div>
</section>



